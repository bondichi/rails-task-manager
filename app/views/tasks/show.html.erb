<h1>
  <%= raw @task.completed ? "<i class='fas fa-check-circle'></i>" : "<i class='far fa-circle'></i>" %> <%= @task.title %>
</h1>
<p><%= @task.details %></p>

<%= link_to "Edit this Task", task_edit_path(@task)  %>

<%= link_to "Back to Task List", tasks_path %>

<%= link_to "Delete", delete_task_path(@task), method: 'delete' %>

